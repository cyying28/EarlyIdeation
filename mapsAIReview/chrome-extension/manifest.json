{
  "manifest_version": 3,
  "name": "Restaurant Assistant",
  "version": "2.0",
  "description": "Ask questions about restaurants using AI-powered review analysis",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://maps.google.com/*",
    "https://www.google.com/*",
    "http://localhost:5000/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Ask About This Restaurant",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["https://maps.google.com/*", "https://www.google.com/maps/*"],
      "js": ["content.js"]
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 